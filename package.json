{
  "name": "lingospark",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "bash -c 'vitest run --reporter=default 2>&1 | tee >(ansi2txt > test-report.txt)' && node scripts/filter-test-report.js",
    "test:run:verbose": "bash -c 'vitest run --reporter=verbose 2>&1 | tee >(ansi2txt > test-report.txt)'",
    "test:coverage": "vitest run --coverage",
    "check-architecture": "node scripts/check-architecture.js",
    "check-architecture:enhanced": "node scripts/check-architecture-enhanced.js",
    "arch:scan": "node scripts/arch-annotation-scanner.js",
    "arch:check": "node scripts/arch-hash-checker.js",
    "arch:validate": "node scripts/arch-annotation-validator.js",
    "arch:generate": "node scripts/arch-annotation-generator.js",
    "arch:organize": "node scripts/arch-code-organizer.js",
    "arch:reorganize": "node scripts/arch-code-reorganizer-advanced.js",
    "doc:update": "node scripts/doc-update-helper.js",
    "workflow:check": "node scripts/workflow-checker.js",
    "ux:test:check": "node scripts/ux-test-checker.js",
    "ux:test:check:fix": "node scripts/ux-test-checker.js --fix",
    "ux:test:list": "node scripts/ux-test-checker.js",
    "tdd:check-ux-test": "node scripts/check-ux-test-alignment.js",
    "tdd:check-feature-ux": "node scripts/check-feature-ux-alignment.js",
    "tdd:check-all": "npm run tdd:check-ux-test && npm run tdd:check-feature-ux",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@sentry/react": "^9.47.1",
    "@sentry/vite-plugin": "^4.6.1",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fake-indexeddb": "^6.2.5",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.14"
  }
}